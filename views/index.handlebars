
<body>
<div class = "container">
    <h1 class = "text-center">Eat Da Burger!</h1>
    <div class = "row">
        <div class = "col-md-6">
        <h2>Burgers ready to eat</h2>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
        </ul>
        </div>
        <div class = "col-md-6">
        <h2>Devoured burgers</h2>

        <ul>
            
        {{#each burgers}}
            {{#if devoured}}
            <li>
            {{burger_name}}
            </li>
            {{/if}}
        {{/each}}
        
        </ul>
        </div>
  </div>
  <div class="row justify-content-center">
<h2>Order a Burger</h2>
  </div>
<div class="row justify-content-center">
<form class="create-form">

  <div class="form-group">
    <label class="bold" for="burg"></label>
    <input type="text" id="burg" name="burger_name">
  </div>
  </div>
<div class="row justify-content-center">
  <button type="submit">Order Burger</button>
</form>
</div>
</div>
</body>